<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingLeft="80dp"
        android:text="Pesan Tiket"
        android:layout_marginTop="15dp"
        android:textSize="20sp"
        android:fontFamily="@font/poppinsbold"
        android:id="@+id/tiket">
    </TextView>

    <ImageView
        android:layout_width="350dp"
        android:layout_height="55dp"
        android:layout_marginTop="65dp"
        android:src="@drawable/ktp"
        android:layout_centerHorizontal="true"
        android:id="@+id/gaskeun">

    </ImageView>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Mohon isi identitas anda"
        android:textSize="17dp"
        android:fontFamily="@font/poppinsbold"
        android:textColor="@color/SecondaryColor"
        android:layout_marginTop="80dp"
        android:paddingLeft="120dp">

    </TextView>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_back"
        android:paddingLeft="20dp"
        android:layout_marginTop="17dp"
        android:id="@+id/pindah">

    </ImageView>
    <ImageView
        android:layout_width="360dp"
        android:layout_height="550dp"
        android:src="@drawable/cardviewtiket"
        android:layout_marginTop="120dp"
        android:layout_centerHorizontal="true"
        android:id="@+id/oke"
        >

    </ImageView>


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/gaskeun"
        android:layout_marginTop="25dp"
        android:orientation="vertical"
        android:id="@+id/linear1">
        
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Nama Penumpang"
            android:paddingLeft="50dp"
            android:fontFamily="@font/poppinsregular">

        </TextView>

        <EditText
            android:layout_width="250dp"
            android:layout_height="40dp"
            android:layout_marginLeft="49dp">

        </EditText>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Alamat Email"
            android:paddingLeft="50dp"
            android:fontFamily="@font/poppinsregular">

        </TextView>

        <EditText
            android:layout_width="250dp"
            android:layout_height="40dp"
            android:layout_marginLeft="49dp">

        </EditText>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Nomor HP"
            android:paddingLeft="50dp"
            android:fontFamily="@font/poppinsregular">

        </TextView>

        <EditText
            android:layout_width="250dp"
            android:layout_height="40dp"
            android:layout_marginLeft="49dp">

        </EditText>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Alamat tempat tinggal"
            android:paddingLeft="50dp"
            android:fontFamily="@font/poppinsregular">

        </TextView>

        <EditText
            android:layout_width="250dp"
            android:layout_height="40dp"
            android:layout_marginLeft="49dp">

        </EditText>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Pilih Course"
            android:paddingLeft="50dp"
            android:fontFamily="@font/poppinsregular"
            android:layout_marginTop="15dp">

        </TextView>

        <Spinner
            android:id="@+id/spinner1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="49dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Gender"
            android:paddingLeft="50dp"
            android:fontFamily="@font/poppinsregular"
            android:layout_marginTop="15dp">

        </TextView>

        <RadioGroup
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginLeft="49dp">
            <RadioButton android:id="@+id/radio_pirates"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Laki-laki"
                android:layout_marginRight="50dp"/>
            <RadioButton android:id="@+id/radio_ninjas"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Perempuan"/>
        </RadioGroup>

        <RatingBar
            android:id="@+id/rating"
            android:layout_width="240dp"
            android:layout_height="wrap_content"
            android:theme="@style/RatingBar"
            android:numStars="5"
            android:layout_marginHorizontal="85dp"
            android:rating="0"
            android:stepSize="0.5"
            android:layout_marginTop="10dp"/>

        <Button
            android:layout_width="120dp"
            android:layout_height="40dp"
            android:background="@drawable/button_shape"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            android:text="Pesan"
            android:fontFamily="@font/poppinsbold"
            android:textColor="@color/SecondaryColor"
            android:layout_gravity="center"
            >
        </Button>

    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/linear1"
        android:layout_marginTop="10dp">

    </LinearLayout>

</RelativeLayout>